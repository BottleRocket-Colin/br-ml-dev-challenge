<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/logo_words"
            android:layout_width="101dp"
            android:layout_height="72dp"
            android:alpha="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <Constraint
            android:id="@+id/logo"
            android:layout_width="304dp"
            android:layout_height="217dp"
            android:layout_marginTop="0dp"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo_top" />

        <Constraint
            android:id="@+id/coral_location_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_baseline_location_on_coral"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/coral_guideline" />

        <Constraint
            android:id="@+id/purple_location_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="64dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_baseline_location_on_purple"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/purple_guideline" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/logo_words"
            android:layout_width="304dp"
            android:layout_height="217dp"
            android:layout_marginTop="0dp"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo_top" />

        <Constraint
            android:id="@id/logo"
            android:layout_width="304dp"
            android:layout_height="217dp"
            android:layout_marginTop="0dp"
            android:alpha="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo_top" />

        <Constraint
            android:id="@+id/coral_location_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_baseline_location_on_coral"
            app:layout_constraintBottom_toTopOf="@id/coral_guideline"
            android:layout_marginBottom="32dp"
            app:layout_constraintEnd_toStartOf="parent" />

        <Constraint
            android:id="@+id/purple_location_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="64dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_baseline_location_on_purple"
            app:layout_constraintBottom_toTopOf="@+id/purple_guideline"
            app:layout_constraintStart_toEndOf="parent" />
    </ConstraintSet>

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@+id/start"
        app:duration="4000"
        app:motionInterpolator="linear">

        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                app:framePosition="99"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/logo" />

            <KeyAttribute
                android:alpha="1"
                app:framePosition="99"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/logo_words" />

            <KeyPosition
                app:framePosition="35"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/logo_words"
                app:percentX="0.425"
                app:percentY="-0.176" />

            <KeyPosition
                app:framePosition="60"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/logo_words"
                app:percentX="0.724"
                app:percentY="0.271" />

        </KeyFrameSet>
    </Transition>
</MotionScene>